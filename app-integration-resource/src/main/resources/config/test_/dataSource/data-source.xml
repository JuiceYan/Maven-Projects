<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:jdbc="http://www.springframework.org/schema/jdbc
	http://www.springframework.org/schema/jdbc/spring-jdbc.xsd"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
     <!--配置数据源,不需要配置地址密码等什么-->
	<jdbc:embedded-database id="dataSource" type="H2">
		<jdbc:script>
		</jdbc:script>
		<jdbc:script location="classpath:config/test_/sql/H2_TYPE.sql"/>
		<jdbc:script location="classpath:config/test_/sql/create-db.sql"/>
		<!-- 使用导出的数据初始化,记得使用UTF-8编码 -->
		<jdbc:script location="classpath:config/test_/sql/insert-data.sql" encoding="UTF-8"/>
	</jdbc:embedded-database>
	        
</beans>